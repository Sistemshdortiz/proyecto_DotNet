@page
@model TiendaPelicula.Pages.Peliculas.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Edit</h1>

<h4>Pelicula</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pelicula.Id" />
            <div class="form-group">
                <label asp-for="Pelicula.Title" class="control-label"></label>
                <input asp-for="Pelicula.Title" class="form-control" />
                <span asp-validation-for="Pelicula.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pelicula.FechaPublicacion" class="control-label"></label>
                <input asp-for="Pelicula.FechaPublicacion" class="form-control" />
                <span asp-validation-for="Pelicula.FechaPublicacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pelicula.Genero" class="control-label"></label>
                <input asp-for="Pelicula.Genero" class="form-control" />
                <span asp-validation-for="Pelicula.Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pelicula.Precio" class="control-label"></label>
                <input asp-for="Pelicula.Precio" class="form-control" />
                <span asp-validation-for="Pelicula.Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pelicula.Calificacion" class="control-label"></label>
                <input asp-for="Pelicula.Calificacion" class="form-control" />
                <span asp-validation-for="Pelicula.Calificacion" class="text-danger"></span>
            </div>
            <td>
                <input type="submit" value="Guardar" class="btn btn-primary btn-sm" /> |
                <a asp-page="./Index" class="btn btn-success btn-sm">Volver a la lista</a>
            </td>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
